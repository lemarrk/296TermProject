@{
}

@model List<Message>

<p>Coding Dojo JS Message Page</p>
<a asp-controller="Coding" asp-action="JSPost">Link To JS Link</a>
<br />
<table class="table table-striped table-bordered">
    <td>Sender</td>
    <td>Subject</td>
    <td>Date Sent</td>
    <td>Body</td>
    <td>Delete Message</td>
    <td>
        <form method="post"><button asp-action="InputMessage" asp-controller="Coding">Input Message</button></form>
    </td>
    @foreach (Message post in Model)
    {
        <tr>
            <td>
                @post.Sender
            </td>
            <td>
                @post.Subject
            </td>
            <td>
                @post.DateSent
            </td>
            <td>
                @post.Body
            </td>
            <td>
                <form method="post"><button asp-action="DeleteMessage" asp-controller="Coding" asp-route-id="@post.MessageID">Delete</button></form>
            </td>
            <td>

            </td>
        </tr>
    }
</table>
