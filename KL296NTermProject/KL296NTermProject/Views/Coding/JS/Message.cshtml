@{
}

@model List<Post>

<p>Coding Dojo JS Message Page</p>
<a asp-controller="Coding" asp-action="JSLink">Link To JS Link</a>
<br />
<table class="table table-striped table-bordered">
    <td>Sender</td>
    <td>Reciever</td>
    <td>Subject</td>
    <td>Date Sent</td>
    <td>Body</td>
    <td>Get Messages</td>
    <td>Delete Message</td>

    @foreach (Post post in Model)
    {
        <tr>
            <td>
                @post.Sender
            </td>
            <td>
                @post.Name
            </td>
            <td>
                @post.Subject
            </td>
            <td>
                @post.DateSent
            </td>
            <td>
                @post.Body
            </td>
            <td>
                <form method="post"><button asp-action="GetJSMessages" asp-controller="Coding" asp-route-id="@post.PostID">Reply</button></form>
            </td>
            <td>
                <form method="post"><button asp-action="DeleteJSMessage" asp-controller="Coding" asp-route-id="@post.PostID">Delete</button></form>
            </td>
        </tr>
    }
</table>
