@{
}
<p>Coding Dojo CSharp message page</p>
@model List<Post>

<a asp-controller="Coding" asp-action="CSharpLink">Link to CSharp Links</a>
<br />
<table class="table table-striped table-bordered">
    <td>Sender</td>
    <td>Reciever</td>
    <td>Subject</td>
    <td>Date Sent</td>
    <td>Body</td>
    <td>Get Messages</td>
    <td>Delete Message</td>
    <td>Make Post</td>
    @foreach (Post post in Model)
    {
        <tr>
            <td>
                @post.Sender
            </td>
            <td>
                @post.Name
            </td>
            <td>
                @post.Subject
            </td>
            <td>
                @post.DateSent
            </td>
            <td>
                @post.Body
            </td>
            <td>
                <form method="post"><button asp-action="CsharpMessage" asp-controller="Coding" asp-route-id="@post.PostID">Reply</button></form>
            </td>
            <td>
                <form method="post"><button asp-action="DeletePost" asp-controller="Coding" asp-route-id="@post.PostID">Delete</button></form>
            </td>
            <td>
                <form method="post"><button asp-action="InputPost" asp-controller="Coding">Post</button></form>
            </td>
        </tr>
    }
</table>