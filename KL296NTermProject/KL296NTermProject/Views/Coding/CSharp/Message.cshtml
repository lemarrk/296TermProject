@{
}
<p>Coding Dojo CSharp message page</p>
@model List<Message>

<a asp-controller="Coding" asp-action="CSharpPost">Link to CSharp Links</a>
<br />
<table class="table table-striped table-bordered">
    <td>Sender</td>
    <td>Subject</td>
    <td>Date Sent</td>
    <td>Body</td>
    <td>Input Message</td>
    <td>Delete Message</td>
    @foreach (Message post in Model)
    {
<tr>
    <td>
        @post.Sender
    </td>
    <td>
        @post.Subject
    </td>
    <td>
        @post.DateSent
    </td>
    <td>
        @post.Body
    </td>
    <td>
        <form method="post"><button asp-action="InputMessage" asp-controller="Coding">Input Message</button></form>
    </td>
    <td>
        <form method="post"><button asp-action="DeleteMessage" asp-controller="Coding" asp-route-id="@post.MessageID">Delete</button></form>
    </td>
</tr>
    }
</table>