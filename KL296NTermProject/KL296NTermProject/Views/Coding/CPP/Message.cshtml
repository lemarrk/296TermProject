@{
   
}

@model List<Message> 

<p>Coding Dojo Cpp message page</p>


<a asp-controller="Coding" asp-action="CppPost">Link to Cpp Link</a>
<br />

<table class="table table-striped table-bordered">
    <td>Sender</td>
    <td>Subject</td>
    <td>Date Sent</td>
    <td>Body</td>
    <td>Get Messages</td>
    <td>Delete Message</td>

    @foreach (Message post in Model)
    {
        <tr>
            <td>
                @post.Sender
            </td>
            <td>
                @post.Subject
            </td>
            <td>
                @post.DateSent
            </td>
            <td>
                @post.Body
            </td>
            <td>
                <form method="post"><button asp-action="DeleteCppMessage" asp-controller="Coding" asp-route-id="1">Delete</button></form>
            </td>
        </tr>
    }
</table>