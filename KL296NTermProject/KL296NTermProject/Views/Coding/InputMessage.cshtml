@{
}

@model Message

<p>Input Message</p>
<a asp-controller="Home" asp-action="Index">Link to Home</a>
<br />

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="InputMessage" asp-controller="Coding" method="post" class="form-horizonal" asp-route-id="@Model.PostID">
    <div class="form-group">
        <fieldset>
            <legend>Input Message Topic</legend>
            <div>
                <label>
                    Cpp
                    <input type="radio" value="1" name="id" required />
                </label>
                <label>
                    CSharp
                    <input type="radio" value="2" name="id" />
                </label>
                <label>
                    JS
                    <input type="radio" value="3" name="id" />
                </label>
            </div>
        </fieldset>
        <br />
        <input class="form-control" placeholder="Input Sender Name" asp-for="Sender" />
        <br />
        <input class="form-control" placeholder="Input Subject Title" asp-for="Subject" />
        <br />
        <textarea asp-for="Body" placeholder="Enter Text Here..." class="form-control"></textarea>
        <button class="btn-default">Submit</button>
    </div>
</form>