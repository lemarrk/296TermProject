@{
}

@model Link

<p>Input Link Page</p>
<a asp-controller="Home" asp-action="Index">Link to Home</a>
<br />

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="InputLink" asp-controller="Coding" method="post" class="form-horizonal">
    <!-- form goes here -->
    <div class="form-group">
        <fieldset>
            <legend>Input Link Topic</legend>
            <div>
                <label>
                    Cpp
                    <input type="radio" value="1" name="id" required />
                </label>
                <label>
                    CSharp
                    <input type="radio" value="2" name="id" />
                </label>
                <label>
                    JS
                    <input type="radio" value="3" name="id" />
                </label>

            </div>
        </fieldset>
        <input class="form-control" placeholder="Input Sender Name" asp-for="Sender" />
        <br />
        <input class="form-control" placeholder="Input Subject Title" asp-for="Subject" />
        <br />
        <input class="form-control" placeholder="Input Url Name" asp-for="UrlName" />
        <br />
        <input class="form-control" placeholder="Input Url " asp-for="URL" />
        <br />
        <button class="btn-default">Submit</button>
    </div>
</form>
