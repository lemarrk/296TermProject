@{
}

@model RegisterVM

<h1>Register</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post" asp-action="Register">

    <div class="form-group row">
        <div class="col-sm-2"><label>UserName:</label></div>
        <div class="col-sm-4">
            <input class="form-control" asp-for="UserName" />
        </div>
        <div class="col">
            <span type="password" asp-validation-for="Password" class="form_control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Role:</label></div>
        <div class="col-sm-4">
            <input class="form-control" asp-for="Role" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input class="form-control" asp-for="Password" />
            <span type="password" asp-validation-for="Password" class="form_control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"><label>Confirm Password:</label></div>
        <div class="col-sm-4">
            <input class="form-control" asp-for="Password" />
        </div>
    </div>

    <div class="row">
        <div class="offset-2 col-sm-4">
            <div>Click to Register</div>
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <div>Already Registered?</div>
            <button asp-action="Index" class="btn btn-primary">Log In</button>
        </div>
    </div>
</form>