@model LoginVM

<h1>Login Or Register</h1>

@if (Model.alreadyLoggedIn)
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" asp-action="Login">
        <div class="form-group row">
            <div class="col-sm-2"><label>UserName:</label></div>
            <div class="col-sm-4">
                <input class="form-control" asp-for="Name" />
            </div>
            <div>
                <span asp-for-validation="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label>Password:</label>
            </div>

            <div class="col-sm-4">
                <input type="password" class="form-control" asp-for="Password" />
            </div>

            <div class="row">
                <div class="offset-sm-2 col-sm-4">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-4">

                <input type="checkbox" title="Remember Me" asp-for="RememberMe" class="form-check" />
                <span>Remember me</span>
            </div>
        </div>

        <div class="row">
            <div class="offset-sm-2 col-sm-4">
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>
        </div>

        <div class="row">
            <div class="offset-sm-2 col-sm-4">
                Not Registered?
                <a asp-action="Register">Register as a new user</a>
            </div>
        </div>
    </form>
}
else
{
    <h1>Register</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" asp-action="Register">
        <div class="form-group row">
            <div class="col-sm-2"><label>UserName:</label></div>
            <div class="col-sm-4">
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="col">
                <span type="password" asp-validation-for="Password" class="form_control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2"><label>Password:</label></div>
            <div class="col-sm-4">
                <input class="form-control" asp-for="Password" />
                <span type="password" asp-validation-for="Password" class="form_control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2"><label>Confirm Password:</label></div>
            <div class="col-sm-4">
                <input class="form-control" asp-for="Password" />
            </div>
        </div>

        <div class="row">
            <div class="offset-2 col-sm-4">
                <div>Click to Register</div>
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
        <div class="row">
            <div class="offset-2 col-sm-4">
                <div>Already Registered?</div>
                <a class="btn btn-primary">Log In</a>
            </div>
        </div>
    </form>
}

<div style="float:right"><p>Rules</p></div>
<h1>Conduct guide</h1>
<p>
    This guide is for everyone's enjoyment and safety
</p>
<ol>
    @foreach (var rule in Model.rules.Rule)
    {
         <li><h1>@rule</h1></li>
    }
</ol>

